{
  "name": "dist-mgr",
  "type": "module",
  "version": "3.1.0",
  "private": true,
  "packageManager": "pnpm@10.7.0",
  "description": "Secure boilerplate for Electron app based on Vite",
  "author": {
    "email": "baiawxk@qq.com",
    "name": "baiawxk",
    "url": "https://github.com/baiawxk"
  },
  "workspaces": [
    "packages/*"
  ],
  "main": "packages/entry-point.mjs",
  "engines": {
    "node": ">=22.0.0"
  },
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev --parallel",
    "compile": "pnpm run build && electron-builder build --config electron-builder.mjs",
    "test": "playwright test ./tests/e2e.spec.ts",
    "start": "node packages/dev-mode.js",
    "typecheck": "turbo run typecheck",
    "lint": "eslint .",
    "lint:ox": "oxlint .",
    "lint:fix": "eslint . --fix",
    "lint:ox:fix": "oxlint . --fix",
    "create-renderer": "cd packages && node ./integrate-renderer/create-renderer.js",
    "integrate-renderer": "pnpm --filter @app/integrate-renderer start",
    "init": "pnpm run create-renderer && pnpm run integrate-renderer && pnpm install"
  },
  "dependencies": {
    "@app/api": "workspace:*",
    "@app/main": "workspace:*",
    "@app/preload": "workspace:*"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^5.4.1",
    "@npmcli/map-workspaces": "5.0.0",
    "@playwright/test": "1.55.0",
    "@types/node": "24.5.2",
    "create-vite": "7.1.2",
    "cross-env": "^10.0.0",
    "electron": "38.1.2",
    "electron-builder": "26.0.12",
    "glob": "11.0.3",
    "jiti": "^2.5.1",
    "oxlint": "^1.18.0",
    "playwright": "^1.55.0",
    "rolldown-vite": "^7.1.13",
    "turbo": "^2.5.8",
    "typescript": "^5.9.2",
    "vite": "^7.1.7"
  },
  "pnpm": {
    "overrides": {
      "vite": "npm:rolldown-vite@latest"
    }
  }
}
