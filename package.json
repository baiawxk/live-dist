{
  "name": "dist-mgr",
  "description": "Secure boilerplate for Electron app based on Vite",
  "version": "3.1.0",
  "private": true,
  "type": "module",
  "author": {
    "email": "kozackunisoft@gmail.com",
    "name": "Alex Kozack",
    "url": "https://kozack.me"
  },
  "main": "packages/entry-point.mjs",
  "engines": {
    "node": ">=23.0.0"
  },
  "scripts": {
    "build": "pnpm --filter=\"*\" run build"  ,
    "compile": "pnpm run build && electron-builder build --config electron-builder.mjs",
    "test": "playwright test ./tests/e2e.spec.ts",
    "start": "node packages/dev-mode.js",
    "typecheck": "pnpm run typecheck --filter=\"*\"",
    "create-renderer": "cd packages && node ./integrate-renderer/create-renderer.js",
    "integrate-renderer": "pnpm --filter @app/integrate-renderer start",
    "init": "pnpm run create-renderer && pnpm run integrate-renderer && pnpm install"
  },
  "devDependencies": {
    "@npmcli/map-workspaces": "5.0.0",
    "@playwright/test": "1.55.0",
    "@types/node": "24.5.2",
    "create-vite": "7.1.2",
    "electron": "38.1.2",
    "electron-builder": "26.0.12",
    "glob": "11.0.3",
    "playwright": "^1.55.0"
  },
  "dependencies": {
    "@app/main": "workspace:*",
    "@app/preload": "workspace:*"
  }
}
